{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "teams-schema.json",
  "type": "array",
  "minItems": 24,
  "maxItems": 24,
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "description": "The team ID",
        "type": "string"
      },
      "name": {
        "description": "The team name",
        "type": "string"
      },
      "flag": {
        "type": "object",
        "properties": {
          "unicode": {
            "description": "The flag as unicode",
            "type": "string"
          },
          "url": {
            "description": "URL to the flag",
            "type": "string"
          }
        }
      },
      "emoji": {
        "type": "object",
        "properties": {
          "slack": {
            "description": "The code to use on slack",
            "type": "string"
          }
        }
      }
    }
  }
}
